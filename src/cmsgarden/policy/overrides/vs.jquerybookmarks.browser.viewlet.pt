<tal:if condition="view/available">
    <div id="jquery-bookmark">
      <!-- placeholder for bookmarks -->
    </div>

    <script type="text/javascript">
        (function($) {
            $(document).ready(function() {
                $('#jquery-bookmark').bookmark({sites:['facebook', 'twitter', 'google',
                                                      'delicious']});
            });
        })(jQuery);
    </script>
</tal:if>

